<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundTransparent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="25dp"
        android:elevation="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:translationZ="90dp"
            android:layout_gravity="right"
            app:cardCornerRadius="12dp"
            android:layout_margin="10dp"
            android:elevation="15dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/greenHigh"
                android:src="@drawable/vc_close"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:translationZ="90dp"
            android:paddingRight="10dp"
            android:background="@drawable/btn_background">

            <ImageView
                android:id="@+id/ivWin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/trophy"/>

            <TextView
                android:layout_toEndOf="@+id/ivWin"
                android:id="@+id/tvWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:src="@drawable/vc_profile"/>


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raaj"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/greenHigh"
                android:paddingBottom="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/btnSignOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_background"
                    android:text="Sign out"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/btnEditPhoto"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background"
                    android:text="Edit Photo"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>